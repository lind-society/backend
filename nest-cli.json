{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "external-gateway": {
      "type": "application",
      "root": "apps/external-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/external-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/external-gateway/tsconfig.app.json"
      }
    },
    "mail": {
      "type": "application",
      "root": "apps/mail",
      "entryFile": "main",
      "sourceRoot": "apps/mail/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mail/tsconfig.app.json",
        "assets": [
          {
            "include": "../views",
            "outDir": "dist/apps/mail/apps/mail/views",
            "watchAssets": true
          }
        ],
        "watchAssets": true
      }
    },
    "mail-client": {
      "type": "library",
      "root": "libs/mail-client",
      "entryFile": "index",
      "sourceRoot": "libs/mail-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mail-client/tsconfig.lib.json"
      }
    },
    "main": {
      "type": "application",
      "root": "apps/main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.app.json",
        "assets": [
          {
            "include": "../assets",
            "outDir": "dist/apps/main/apps/main/assets",
            "watchAssets": true
          }
        ],
        "watchAssets": true
      }
    },
    "rabbitmq": {
      "type": "library",
      "root": "libs/rabbitmq",
      "entryFile": "index",
      "sourceRoot": "libs/rabbitmq/src",
      "compilerOptions": {
        "tsConfigPath": "libs/rabbitmq/tsconfig.lib.json"
      }
    },
    "whatsapp": {
      "type": "application",
      "root": "apps/whatsapp",
      "entryFile": "main",
      "sourceRoot": "apps/whatsapp/src",
      "compilerOptions": {
        "tsConfigPath": "apps/whatsapp/tsconfig.app.json"
      }
    },
    "whatsapp-client": {
      "type": "library",
      "root": "libs/whatsapp-client",
      "entryFile": "index",
      "sourceRoot": "libs/whatsapp-client/src",
      "compilerOptions": {
        "tsConfigPath": "libs/whatsapp-client/tsconfig.lib.json"
      }
    }
  }
}